extends layout

block content

  if showLogin
    div.row
      div.col-md-12.text-center
        h1 Create a Postcard with your Instagram Photos
        p In order to use the demo you must first authorize Instagram.
        a(href="/authorize-user" class="btn btn-primary") Login to Instagram
  else
    div.row
      div.col-md-6
        h1 Preview
        div.postcard-preview.clearfix
          img(src= image1, width="250px", class='image1')
          img(src= image2, width="250px", class='image2')
          img(src= image3, width="250px", class='image3')
        div.text-center
          br
          a.btn.btn-default(href="/") New Random Images
